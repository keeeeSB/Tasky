.row.justify-content-center
  .col-md-6
    .text-center
      - if @team.logo.attached?
        = image_tag @team.logo.variant(:thumb), class: 'rounded-circle mb-3'

      %h2.fw-bold.mb-5= @team.name

      = link_to 'タスクを作成する', new_users_team_task_path, class: 'btn btn-outline-secondary btn-sm mb-3'

      %h4.mb-3 タスク一覧
      - if @team.tasks.exists?
        - @team.tasks.default_order.each do |task|
          .card.shadow-sm.mb-4
            .card-body.py-3
              = link_to users_team_task_path(task), class: 'text-decoration-none text-dark' do
                %h5.card-title.fw-semibold.mb-2= task.title
              %p.mb-2= h(task.description)
              = button_to task.completed? ? '完了を取り消す' : '完了にする',
                          toggle_users_team_task_path(task),
                          method: :patch,
                          class: "btn btn-sm #{task.completed? ? 'btn-secondary' : 'btn-outline-success'}"
      - else
        %p タスクがありません。
