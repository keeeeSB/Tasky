.admin-sidebar.d-flex.flex-column.flex-shrink-0.p-3.bg-light
  = link_to admins_root_path, class: 'text-dark text-decoration-none' do
    %span.fs-4 Tasky管理画面
  %hr
  %ul.nav.nav-pills.flex-column.mb-auto
    %li.nav-item
      = link_to admins_root_path, class: 'nav-link text-black' do
        %i.bi.bi-house.icon-small.me-2
        管理者ホーム
    %li.nav-item
      = link_to admins_teams_path, class: 'nav-link text-black' do
        %i.bi.bi-microsoft-teams.icon-small.me-2
        チーム一覧

  %hr
  .dropdown
    %a.d-flex.align-items-center.link-body-emphasis.text-decoration-none.dropdown-toggle{ 'aria-expanded' => 'false', 'data-bs-toggle' => 'dropdown', :href => '#' }
      %i.bi.bi-person-fill.icon-middle.me-2
      %strong 管理者
    %ul.dropdown-menu.text-small.shadow
      %li
        = button_to 'ログアウト', destroy_admin_session_path, class: 'dropdown-item', method: :delete
